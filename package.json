{
	"name": "blendsphere-frontend",
	"private": true,
	"version": "0.0.2",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"lint:all": "npm run format:check && npm run lint && npm run check",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"test:security": "vitest run src/lib/utils/security.test.ts",
		"validate": "npm run lint:all && npm run test",
		"security:audit": "npm audit --audit-level=moderate",
		"security:audit:fix": "npm audit fix",
		"security:audit:force": "npm audit fix --force",
		"security:check": "npm run security:audit && npm run test:security",
		"security:scan": "npm run lint -- --ext .js,.ts,.svelte --rule 'security/*: error'",
		"security:full": "npm run security:check && npm run security:scan"
	},
	"devDependencies": {
		"@dnd-kit-svelte/core": "^0.0.8",
		"@dnd-kit-svelte/modifiers": "^0.0.8",
